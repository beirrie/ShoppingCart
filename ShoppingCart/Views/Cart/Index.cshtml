<!--  Main content-->
<div style="display:flex; justify-content:space-between;">
    <div>
        <div>
            <h2 style="text-align: left;" class="fw-bolder mb-4">
            View Cart
            </h2>
        </div>
        <div id="cart-empty"></div>
        <div id="cartDetailsTable" class="container-fluid">
            <!-- generate cart items -->
        </div>
    </div>
    <div style="display:inline-block; justify-content:right;">
        <p class="text-center h2" style="font-weight:700;margin-bottom:30px;">TOTAL: $<span id="cartTotalPrice" name="cartTotalPrice">0.00</span></p>
        <button type="submit" class="btn btn-success btn block cart-btn" id="checkoutBtn" style="display:block; width:100%;" asp-area="" onclick="checkout()">Checkout Cart</button>
        <button type="reset" class="btn btn-primary btn block cart-btn" id="clearBtn" style="display:block; width:100%;">Clear Cart</button>
    </div>
</div>

